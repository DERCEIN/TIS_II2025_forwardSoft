# Configuración de Base de Datos
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=forwardsoft_olimpiadas
DB_USERNAME=postgres
DB_PASSWORD=forwardsoft

# Configuración de la Aplicación
APP_NAME=ForwardSoft
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000


# JWT Configuration
JWT_SECRET=default-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# SMTP (rellena con tu proveedor o usa Mailtrap para pruebas)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@forwardsoft.local
MAIL_FROM_NAME=ForwardSoft