{
    "name": "forwardsoft/backend",
    "description": "Backend API para ForwardSoft",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.4.22",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "doctrine/cache": "^2.2",
        "doctrine/dbal": "^4.3",
        "doctrine/migrations": "^3.9",
        "doctrine/orm": "^3.5",
        "firebase/php-jwt": "^6.11",
        "guzzlehttp/guzzle": "^7.10",
        "monolog/monolog": "^3.9",
        "phpmailer/phpmailer": "^6.10",
        "respect/validation": "^2.4",
        "symfony/cache": "^7.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "ForwardSoft\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ForwardSoft\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse src --level=8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
